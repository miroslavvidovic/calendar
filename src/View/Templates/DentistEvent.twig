{% extends "Base.twig" %}

{% block title %} New Event {% endblock %}

{% block scripts %}
<script>
$(function() {
  $(".datepicker").datepicker({
    changeMonth: true,
    changeYear: true,
    dateFormat: 'mm/dd/yy',
    beforeShow: function (input, inst) {
        var rect = input.getBoundingClientRect();
        setTimeout(function () {
	        inst.dpDiv.css({ top: rect.top - 150, left: rect.left + 240 });
        }, 0);
    }
  });
});
</script>
{% endblock %}

{% block content %}
  <h2>Add a new dentist related event</h2>
  <form class="pure-form pure-form-stacked" method="post" action="DFormData.php">
    <fieldset>
      <legend>New Event</legend>

      <label for="title">Title</label>
      <input name="title" id="title" type="text" placeholder="Title of the event">

      <label for="all_day" class="pure-checkbox">
          <input name="all_day" id="all_day" type="checkbox"> All day event
      </label>

      <label for="start_date">Start date</label>
      <input class="datepicker" name="start_date" id="start_date" type="text" placeholder="Starting date">

      <label for="end_date">End date</label>
      <input class="datepicker" name="end_date" id="end_date" type="text" placeholder="End date">

      <label for="info">Info</label>
      <textarea id="info" class="pure-input-1-2" name="info" placeholder="Aditional information"></textarea>

      <button type="submit" value="Submit" class="pure-button pure-button-primary">Save</button>
  </fieldset>
</form>
{% endblock %}
